{
    "manifest_version": 3,
    "name": "Weblin",
    "short_name": "Weblin",
    "version": "1.2.8.1",
    "description": "Avatars and Things on Web Pages",
    "permissions": [
        "storage"
    ],
    "action": {
        "default_title": "weblin.io"
    },
    "icons": {
        "128": "./assets/icon.png"
    },
    "content_scripts": [
        {
            "js": [
                "contentscript.js"
            ],
            "css": [],
            "matches": [
                "http://*/*",
                "https://*/*"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "contentscript.css",
                "assets/*",
                "popup.*",
                "manifest.json"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    }
}
