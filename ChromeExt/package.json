{
  "name": "nine3q-chrome-extension-avatars-and-things-on-web-pages",
  "version": "1.0.0",
  "description": "Weblin: Avatars and Things on Web Pages",
  "homepage": "https://github.com/lupuslabs/n3qExt/blob/develop/ChromeExt/README.md",
  "scripts": {
    "clean:chrome": "shx rm -rf -- dist",
    "clean:firefox": "shx rm -rf -- dist-firefox",
    "clean": "npm-run-all clean:*",
    "extension-data:chrome": "shx mkdir -p -- dist/assets && shx cp -- manifest.json dist/ && shx cp -r -- src/assets dist/",
    "extension-data:firefox": "shx mkdir -p -- dist-firefox/assets && shx cp -- manifest-firefox.json dist-firefox/manifest.json && shx cp -r -- src/assets dist-firefox/",
    "extension-data": "npm-run-all extension-data:*",
    "prebuild": "npm run clean",
    "build:contentscript-background": "cross-env NODE_ENV=production webpack --config webpack.config.js",
    "build:test": "webpack --config webpack.test.config.js",
    "build:embedded": "cross-env NODE_ENV=production webpack --config webpack.embedded.config.js",
    "prewatch": "npm run clean",
    "watch:contentscript-background": "cross-env NODE_ENV=development webpack --config webpack.config.js -w",
    "watch:test": "webpack --config webpack.test.config.js -w",
    "watch:embedded": "cross-env NODE_ENV=development webpack --config webpack.embedded.config.js -w",
    "build": "npm-run-all extension-data build:*",
    "watch": "npm-run-all --parallel extension-data watch:*",
    "zip:chrome": "bestzip extension.zip dist/*",
    "zip:firefox": "cd dist-firefox && bestzip ../extension-firefox.xpi *",
    "zip": "npm-run-all zip:*",
    "release-extension": "npm-run-all clean extension-data build:contentscript-background zip",
    "release-embedded": "npm-run-all clean build:embedded"
  },
  "bugs": {
    "url": "https://github.com/lupuslabs/n3qExt/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lupuslabs/n3qExt/tree/develop/ChromeExt"
  },
  "keywords": [
    "chrome",
    "extension",
    "typescript",
    "react"
  ],
  "author": "Wolfspelz",
  "license": "ISC",
  "devDependencies": {
    "@types/chrome": "0.0.221",
    "@types/firefox-webext-browser": "111.0.1",
    "@types/node": "18.15.0",
    "@typescript-eslint/eslint-plugin": "5.54.0",
    "@typescript-eslint/parser": "5.54.0",
    "bestzip": "2.2.1",
    "cra-build-watch": "3.4.0",
    "cross-env": "7.0.3",
    "css-loader": "6.7.3",
    "eslint": "8.36.0",
    "html-webpack-plugin": "5.5.0",
    "mini-css-extract-plugin": "2.7.3",
    "node-polyfill-webpack-plugin": "2.0.1",
    "webpack-shell-plugin-next": "2.3.1",
    "npm-run-all": "4.1.5",
    "sass": "1.58.3",
    "sass-loader": "13.2.0",
    "shx": "0.3.4",
    "ts-loader": "9.4.2",
    "ts-node": "10.9.1",
    "typescript": "4.9.5",
    "url-loader": "4.1.1",
    "webpack": "5.75.0",
    "webpack-cli": "5.0.1"
  },
  "dependencies": {
    "@types/chai": "4.3.4",
    "@types/jquery": "3.5.16",
    "@types/xmpp__jid": "1.3.3",
    "@types/xmpp__xml": "0.13.1",
    "@xmpp/client": "0.13.1",
    "@xmpp/debug": "0.13.0",
    "chai": "4.3.7",
    "jquery": "3.6.3",
    "loglevel": "1.8.1",
    "node-rsa": "1.1.1",
    "unique-names-generator": "4.7.1",
    "web3": "1.8.2"
  }
}
